<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingTranslation">

    <!-- Option to enable Log messages-->
    <bool name="debugging">true</bool>

    <!--
    Main sections in the app.
    The Home, donations, credits and settings, sections will be added automatically

    Other possible tabs:
    Previews, Wallpapers, Requests, Apply, FAQs, Zooper, Kustom

    Make sure you add the tabs with the exact word as the options listed, with the proper caps as well
    Make sure you have an Apply section!
    Make sure you DO NOT translate the tabs names. They are already translated.
    -->
    <string-array name="drawer_sections">
        <item>Previews</item>
        <item>Wallpapers</item>
        <item>Requests</item>
        <item>Apply</item>
        <item>FAQs</item>
        <!--<item>Zooper</item>-->
        <!--<item>Kustom</item>-->
    </string-array>

    <!-- Specify splashscreen color
    Can be LightLaunchScreen or DarkLaunchScreen
    -->
    <style name="AppTheme.LaunchScreen" parent="@style/AppTheme.Base.LightLaunchScreen"/>

    <!-- App theme
    1. Light
    2. Dark
    3. Clear
    4. Auto (Light in the morning & Dark in the night)
    -->
    <integer name="app_theme">1</integer>

    <!--
    Do you want the app name and version in the drawer header?
    True, means yes.
    False, means no.
    -->
    <bool name="with_drawer_texts">true</bool>

    <!--
    Do you want to use Light Status Bar in Light, or Dark theme?
    True, means yes.
    False, means no.
    -->
    <bool name="light_statusbar_in_light_theme">true</bool>
    <bool name="light_statusbar_in_dark_theme">false</bool>
    <bool name="light_statusbar_in_clear_theme">false</bool>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ DONATIONS CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!-- MAKE SURE THAT THE TWO ARRAYS BELOW ALL HAVE THE SAME NUMBER OF ITEMS,
    OR ELSE THIS WON'T WORK-->
    <string-array name="google_donations_items">
        <!--
        Put donation items ids here
        -->
    </string-array>

    <string-array name="google_donations_catalog">
        <!--
        Put name of donation items here
        -->
    </string-array>

    <!-- PAYPAL STUFF - SET BOTH STRINGS, OR IT WON'T WORK -->
    <string name="paypal_email"></string>
    <!-- Paypal currency code (ie USD, or CAD); make sure this is a valid code-->
    <string name="paypal_currency_code"></string>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ HOME/MAIN SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/-->

    <!--
    Do you want the icons in toolbar to be randomized?
    True, means yes.
    False, means no.
    -->
    <bool name="shuffle_toolbar_icons">true</bool>

    <!--
    Do you want to let user see the device wallpaper in toolbar?
    True, means yes.
    False, means no.
    -->
    <bool name="enable_user_wallpaper_in_toolbar">true</bool>

    <!-- Set a drawable name in case you want to use a static picture in toolbar.
        Leave empty if you don't want to use a static one. -->
    <string name="toolbar_picture"></string>

    <!-- Change to set a custom amount in case you think the app is counting icons wrong.
        Leave as -1 if you still want the app to count them. -->
    <integer name="icons_amount">-1</integer>

    <!--
    Do you want to hide "Icon Pack in numbers" section?
    True, means yes.
    False, means no.
    -->
    <bool name="hide_pack_info">false</bool>

    <!--
    Do you want to show a FAQs button in welcome card?
    True, means yes.
    False, means no.
    -->
    <bool name="show_faqs_button">false</bool>

    <!-- These arrays are for the list of apps or links in main section. -->
    <string-array name="home_list_titles">
    </string-array>

    <string-array name="home_list_descriptions">
    </string-array>

    <string-array name="home_list_icons">
    </string-array>

    <string-array name="home_list_links">
    </string-array>


    <!--  /*/*/*/*/*/*/*/*/*/*/*/*/ ICONS/PREVIEWS SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!-- Show button in changelog to check new icons?
        True, means yes.
        False, means no.
        -->
    <bool name="show_check_new_icons_button">true</bool>

    <!-- Do you want icons be sorted alphabetically and organized automatically, removing duplicates too?
    True, means yes.
    False, means no.
    -->
    <bool name="organize_icons_list">false</bool>

    <!--
    Do you want the "ALL ICONS" tab to be generated automatically?
    If you are sure you have put all the icons in categories.
    True, means yes.
    False, means no.
    -->
    <bool name="auto_generate_all_icons">false</bool>

    <!-- Setup the columns amount you want in different sections -->
    <!-- PHONES - PORTRAIT MODE -->
    <integer name="icons_columns_normal_portrait">4</integer>
    <!-- PHONES - LANDSCAPE MODE -->
    <integer name="icons_columns_normal_landscape">7</integer>
    <!-- TABLETS - PORTRAIT MODE -->
    <integer name="icons_columns_tablet_portrait">8</integer>
    <!-- TABLETS - LANDSCAPE MODE -->
    <integer name="icons_columns_tablet_landscape">12</integer>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ WALLPAPERS SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!-- Set this to true if you want the alternative wallpaper viewer. (The one with the FAB) -->
    <bool name="alternative_viewer">true</bool>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ APPLY SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!--
    Setup the columns amount you want in different sections
    -->
    <!-- PHONES - PORTRAIT MODE -->
    <integer name="launchers_columns_normal_portrait">3</integer>
    <!-- PHONES - LANDSCAPE MODE -->
    <integer name="launchers_columns_normal_landscape">6</integer>
    <!-- TABLETS - PORTRAIT MODE -->
    <integer name="launchers_columns_tablet_portrait">5</integer>
    <!-- TABLETS - LANDSCAPE MODE -->
    <integer name="launchers_columns_tablet_landscape">8</integer>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ REQUESTS SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!--
    Do you want request items as cards?
    True, means cards.
    False, means flat stuff.
    -->
    <bool name="request_cards">false</bool>

    <!--
    1. Set the max amount of apps to request.
    2. Limit requests to 1 every X minutes.
    Replace X with the number of minutes you want.
    60 means 1 request every 1 hour.
    1440 means 1 request per day.
    10080 means 1 request per week.
    40320 means 1 request per month.

    App Limit:
    If the apps limit is 0, users won't be able to request anything.
    If the apps limit is -1, users can request as many times they want, and
    as many apps they want.

    Time limit:
    If the time limit is set to 0 or less, users will be able to request as many times they want,
    with the max apps limit.
    -->
    <integer name="max_apps_to_request">-1</integer>
    <integer name="time_limit_in_minutes">120</integer>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ FAQS SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!--
    Do you want faqs items as cards?
    True, means cards.
    False, means flat stuff.
    -->
    <bool name="faqs_cards">false</bool>


    <!-- /*/*/*/*/*/*/*/*/*/*/*/*/ SETTINGS SECTION CONFIGURATION /*/*/*/*/*/*/*/*/*/*/*/*/ -->

    <!--
    Do you want to enable notifications?
    True, means yes.
    False, means no.
    -->
    <bool name="enable_notifications">true</bool>

    <!--
    Do you want to allow users to hide the app icon?
    True, means yes.
    False, means no.
    -->
    <bool name="allow_user_to_hide_app_icon">true</bool>

    <!--
    Default value to either use wallpaper in toolbar or not.
    You must have set 'enable_user_wallpaper_in_toolbar' in line #113 to true for this to work.
    True means used by default.
    False means not used by default. (User must enable it in settings to be able to see it).
    -->
    <bool name="show_user_wallpaper_in_toolbar_by_default">true</bool>

</resources>
