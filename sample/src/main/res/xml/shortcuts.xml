<shortcuts xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- /*/*/*/*/*/ YOU CAN REMOVE SHORTCUTS, BUT YOU CAN NOT ADD NEW ONES, BECAUSE APP WON'T BE HANDLING THEM /*/*/*/*/ -->

    <shortcut
            android:icon="@drawable/requests_shortcut"
            android:enabled="true"
            android:shortcutId="static_request_shortcut"
            android:shortcutShortLabel="@string/section_icon_request"
            android:shortcutLongLabel="@string/section_icon_request"
            tools:targetApi="n_mr1">
        <intent
                android:targetPackage="com.hendrikbl.uxicons"
                android:action="android.intent.action.VIEW"
                android:targetClass="com.hendrikbl.uxicons.HomeActivity"
                android:data="request_shortcut"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
            android:icon="@drawable/wallpapers_shortcut"
            android:enabled="true"
            android:shortcutId="static_wallpapers_shortcut"
            android:shortcutShortLabel="@string/section_wallpapers"
            android:shortcutLongLabel="@string/section_wallpapers"
            tools:targetApi="n_mr1">
        <intent
                android:targetPackage="com.hendrikbl.uxicons"
                android:action="android.intent.action.VIEW"
                android:targetClass="com.hendrikbl.uxicons.HomeActivity"
                android:data="wallpapers_shortcut"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
            android:icon="@drawable/apply_shortcut"
            android:enabled="true"
            android:shortcutId="static_apply_shortcut"
            android:shortcutShortLabel="@string/section_apply"
            android:shortcutLongLabel="@string/section_apply"
            tools:targetApi="n_mr1">
        <intent
                android:targetPackage="com.hendrikbl.uxicons"
                android:action="android.intent.action.VIEW"
                android:targetClass="com.hendrikbl.uxicons.ApplyShortcut"
                android:data="apply_shortcut"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

</shortcuts>